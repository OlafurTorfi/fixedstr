{
    "compilerOptions": {
        "types": ["mocha", "chai"],
        "module": "commonjs",
        "noUnusedLocals": true,
        "declaration": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "target": "ES6",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts", "src/test.js"
    ],
    "exclude": [
        "node_modules",        
        "dist"
    ],
    "compileOnSave": true
}
